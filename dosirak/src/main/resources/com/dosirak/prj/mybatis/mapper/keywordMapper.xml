  <select id="getKeywordList">
  
    SELECT BLOG_LIST_NO, BLOG_NO, KEYWORD_NO, TITLE, CONTENTS, CREATE_DT, MODIFY_DT
      FROM (SELECT ROW_NUMBER() OVER(ORDER BY BLOG_LIST_NO DESC) AS RN, BLOG_LIST_NO, BLOG_NO, KEYWORD_NO, TITLE, CONTENTS, CREATE_DT, MODIFY_DT
              FROM B.BLOG_LSIT_T INNER JOIN K.KEYWORD_T
                ON B.KEYWORD_NO = K.KEYWORD_NO)
     WHERE K.KEYWORD_NAME = #{keywordName}
  
  </select>
  
 
